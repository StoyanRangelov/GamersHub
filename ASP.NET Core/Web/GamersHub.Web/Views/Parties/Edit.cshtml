@using GamersHub.Data.Models
@model GamersHub.Web.ViewModels.Parties.PartyEditViewModel
@{
    ViewData["Title"] = "Edit Party";

    var enumList = Html.GetEnumSelectList<ActivityType>().Where(x => x.Text != Model.Activity);

}

<div class="text-center text-white">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>
<div class="row text-white">
    <div class="col-md-10">
        <form asp-controller="Parties" asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Game"></label>
                <input asp-for="Game" class="form-control"/>
                <span asp-validation-for="Game" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity"></label>
                <input asp-for="Activity" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="ChangeActivity"></label>
                <select asp-for="ChangeActivity" asp-items="@enumList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="CreatorId" value="@Model.CreatorId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-lg btn-primary"/>
            </div>
        </form>
    </div>
</div>