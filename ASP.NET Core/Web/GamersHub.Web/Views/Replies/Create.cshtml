@using GamersHub.Common
@model GamersHub.Web.ViewModels.Replies.ReplyCreateInputModel
@{
    ViewData["Title"] = "Post a Reply";
}

<div class="d-block">
    <h2 class="display-3">@Model.Post.ForumName</h2>
    <h2>@Model.Post.CategoryName</h2>
</div>

<hr/>
<div class="card">
    <div class="card-header">
        <h5 class="d-inline">@Model.Post.UserUsername</h5>
        <h5 class="float-right">User Publications: @Model.Post.Publications</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Post.Name</h5>
        <p class="card-text">@Model.Post.Content</p>
        @if (this.User.Identity.Name == this.Model.Post.UserUsername ||
             this.User.IsInRole(GlobalConstants.AdministratorRoleName) ||
             this.User.IsInRole(GlobalConstants.ModeratorRoleName))
        {
            <a asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.Post.Id" class="d-inline-block float-right btn btn-warning" type="submit">Edit</a>
        }
    </div>
    <div class="card-footer">
        <span class="d-inline"><i class="fas fa-calendar-alt"></i> Created On: @Model.Post.CreatedOn.ToString("MM/dd/yyyy hh:mm tt")</span>
        @if (Model.Post.ModifiedOn != null)
        {
            <span class="float-right"><i class="fas fa-calendar-alt"></i> Last Modified: @Model.Post.ModifiedOn.Value.ToString("MM/dd/yyyy hh:mm tt")</span>
        }
    </div>
</div>

<hr/>
<div class="row">
<div class="col-md-12">
    <form asp-controller="Replies" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="8"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" name="PostId" value="@Model.Post.Id"/>
        </div>
        <div class="form-group">
                    <input type="hidden" name="PostUrl" value="@Model.Post.Url"/>
                </div>
        <div class="form-group">
            <input type="submit" value="Post" class="btn btn-primary btn-lg"/>
        </div>
    </form>
</div>
</div>