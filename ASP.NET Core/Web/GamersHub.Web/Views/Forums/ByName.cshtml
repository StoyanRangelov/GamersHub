@model GamersHub.Web.ViewModels.Forums.ForumByNameViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="d-inline-block ">
    <h1 class="display-3">@Model.Name</h1>
</div>
<div class="d-inline-block float-right">
    <a asp-controller="Posts" asp-action="Create" type="submit" class="btn btn-primary btn-lg">New Topic</a>
</div>
<hr/>
<div class="row row-cols-1 row-cols-md-3 list-group list-group-horizontal">
    @if (this.ViewData["CategoryName"] == null)
    {
        @for (int i = 0; i < Model.CategoryNames.Length; i++)
        {
            <div class="col mb-4">
                <a asp-controller="Forums" asp-action="@Model.Url" asp-route-id="@Model.CategoryNamesUrls[i]" class="list-group-item list-group-item-action">@Model.CategoryNames[i]</a>
            </div>
        }
    }
    else
    {
        <h2>@this.ViewData["CategoryName"]</h2>
    }
</div>

<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Topic</th>
        @if (this.ViewData["CategoryName"] == null)
        {
            <th scope="col">Category</th>
        }
        <th scope="col">Author</th>
        <th scope="col">Replies</th>
        <th scope="col">Created On</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model.Posts)
    {
        @await Html.PartialAsync("_ForumsByNamePartial", @post, ViewData);
    }
    </tbody>
</table>