@model GamersHub.Web.ViewModels.Forums.ForumByNameViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="d-inline-block ">
    <h1 class="display-3">@Model.Name</h1>
</div>
<div class="d-inline-block float-right">
    <a asp-controller="Posts" asp-action="Create" asp-route-id="@Model.Id" type="submit" class="btn btn-primary btn-lg">New Topic</a>
</div>

<div class="row row-cols-1 row-cols-md-3 list-group list-group-horizontal">
    @foreach (var categoryName in Model.CategoryNames)
    {
        <div class="col mb-4">
            <a href="#" class="list-group-item list-group-item-action">@categoryName</a>
        </div>
    }
</div>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Topic</th>
            <th scope="col">Category</th>
            <th scope="col">Author</th>
            <th scope="col">Replies</th>
            <th scope="col">Created On</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>
                    <a href="#">@post.ShortTopic</a>
                </td>
                <td>@post.CategoryName</td>
                <td>@post.UserUsername</td>
                <td>@post.RepliesCount</td>
                <td>@post.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>