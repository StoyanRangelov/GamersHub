@using GamersHub.Common
@using System.Linq
@model GamersHub.Web.ViewModels.Forums.ForumIndexViewModel
@{
    ViewData["Title"] = "All Forums";
    ViewData["Description"] = "Video Game Forums for discussions.";
}

<meta name="description" content="@ViewData["Description"]"/>
<meta name="keywords" content="Video Game,Forums,Discussion"/>

<div class="d-inline-block float-right">
    <a asp-controller="Posts" asp-action="Create" type="submit" class="btn btn-primary btn-lg"><i class="fa fa-plus"></i>&nbsp; New Post</a>
</div>

<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>
<div class="row row-cols-1 row-cols-md-2">
    @foreach (var forum in Model.Forums)
    {
        <partial name="_ForumsIndexPartial" model="forum"/>
    }
</div>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Forums"
                   asp-action="Index"
                   asp-route-id="@(this.Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-controller="Forums"
                   asp-action="Index"
                   asp-route-id="@i">
                    @i
                </a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Forums"
                   asp-action="Index"
                   asp-route-id="@(this.Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        }
    </ul>
</nav>