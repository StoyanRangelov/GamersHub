@model GamersHub.Web.ViewModels.Posts.PostEditViewModel
@{
    ViewData["Title"] = "Edit Post";

}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>

<div class="row">
    <div class="col-md-10">
        <form asp-controller="Posts" asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="20"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="UserId" value="@Model.UserId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-lg btn-primary"/>
            </div>
        </form>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>