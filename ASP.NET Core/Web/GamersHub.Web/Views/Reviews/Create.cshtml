@model GamersHub.Web.ViewModels.Reviews.ReviewCreateInputModel
@{
    ViewData["Title"] = "Create Review";
    var games = Model.Games.Select(x => new SelectListItem($"{x.Title} {x.SubTitle}", x.Id.ToString()));
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>
<div class="row">
    <div class="col-md-10">
        <form asp-controller="Reviews" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="GameId"></label>
                <select asp-for="GameId" asp-items="games" class="form-control"></select>
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label asp-for="IsPositive">
                    <i class="fas fa-thumbs-up fa-lg text-primary"></i>
                </label>
                <input asp-for="IsPositive" type="radio" value="@true"/>
                <label asp-for="IsPositive">
                    <i class="fas fa-thumbs-down fa-lg text-danger"></i>
                </label>
                <input asp-for="IsPositive" type="radio" value="@false"/>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="20"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-lg btn-primary"/>
            </div>
        </form>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>