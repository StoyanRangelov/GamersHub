@model GamersHub.Web.ViewModels.HttpErrorViewModel
@{
    this.ViewData["Title"] = "Http Error";
}

<body style="background-image: url('https://res.cloudinary.com/dhagvwgd6/image/upload/v1587277057/bg_fyibx6.jpg')">
<br/>
<br/>
<br/>
<br/>
