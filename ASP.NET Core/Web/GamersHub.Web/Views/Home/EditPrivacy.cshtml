@model GamersHub.Web.ViewModels.Pages.PrivacyPageEditInputModel
@{
    ViewData["Title"] = "Edit Privacy";

}

<div class="text-center text-white">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>

<div class="row text-white">
    <div class="col-md-10">
        <form asp-controller="Home" asp-action="EditPrivacy" method="post">
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="40"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-lg btn-primary"/>
            </div>
        </form>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>