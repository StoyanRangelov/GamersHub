@using GamersHub.Common
@using System.Linq
@model GamersHub.Web.ViewModels.Administration.Categories.CategoryIndexViewModel
@{
    ViewData["Title"] = "Administration - Categories";
}

@if (this.TempData["InfoMessage"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessage"]
    </div>
}
<br/>

<div class="d-inline-block">
    <a asp-area="Administration" asp-controller="Dashboard" asp-action="Index" type="submit" class="btn btn-primary btn-lg">Back to Dashboard</a>
</div>

<div class="d-inline-block float-right">
    <a asp-area="Administration" asp-controller="Categories" asp-action="Create" type="submit" class="btn btn-primary btn-lg"><i class="fa fa-plus"></i>&nbsp; New Category</a>
</div>

<div class="text-center ">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>
<hr/>
<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Forums</th>
        <th scope="col">Posts</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.ShortDescription</td>
            <td>@category.CategoryForumsCount</td>
            <td>@category.PostsCount</td>
            <td>
                <a asp-area="Administration" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="d-inline-block btn btn-warning" type="submit">Edit</a>
            </td>
            <td>
                <a asp-area="Administration" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="d-inline-block btn btn-danger" type="submit">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area="Administration"
                   asp-controller="Categories"
                   asp-action="Index"
                   asp-route-id="@(this.Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-area="Administration"
                   asp-controller="Categories"
                   asp-action="Index"
                   asp-route-id="@i">
                    @i
                </a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-area="Administration"
                   asp-controller="Categories"
                   asp-action="Index"
                   asp-route-id="@(this.Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        }
    </ul>
</nav>