@using GamersHub.Common
@model GamersHub.Web.ViewModels.Administration.Categories.CategoryDeleteViewModel
@{
    ViewData["Title"] = "Delete Category";
}


<div class="text-center text-white">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>
<div class="d-block text-white">
    <h2>You are about to delete the following Category</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header alert alert-success">
                <span class="float-right">Created on: <time datetime="@Model.CreatedOn"></time></span>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">Total Posts: <span class="badge badge-primary">@Model.PostsCount</span></p>
                <div class="card-header">
                    Forums
                    <span class="badge badge-primary float-right">@Model.CategoryForumsCount</span>
                </div>
                <ul class="list-group list-group-flush">
                    @if (!Model.CategoryForums.Any())
                    {
                        <li class="list-group-item">None</li>
                    }
                    else
                    {
                        @foreach (var category in Model.CategoryForums)
                        {
                            <li class="list-group-item">@category.ForumName</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<form class="d-inline-block m-1" asp-area="Administration" asp-controller="Categories" asp-action="Delete" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger btn-lg"/>
    </div>
</form>

<div class="d-inline-block m-1">
    <a asp-area="Administration" asp-controller="Categories" asp-action="Index" type="submit" class="btn btn-primary btn-lg">Cancel</a>
</div>