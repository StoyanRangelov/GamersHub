@model GamersHub.Web.ViewModels.Administration.Users.UserUnbanViewModel
@{
    ViewData["Title"] = "Unban User";
}
<div class="text-center text-white">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>

<hr/>
<div class="d-block text-white">
    <h2>You are about to Unban the following User</h2>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header alert alert-success">
                <img src="@Model.ImgUrl" alt="Profile Picture" class="profilePicture card-img-top mr-2" >
                <h5 class="float-right">Ban Expires: <time datetime="@Model.LockoutEnd"></time></h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Username</h5>
                <h6 class="card-subtitle mb-2 text-muted">Previous activity</h6>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Posts: <span class="badge badge-primary">@Model.PostsCount</span></li>
                    <li class="list-group-item">Replies: <span class="badge badge-primary">@Model.RepliesCount</span></li>
                    <li class="list-group-item">Reviews: <span class="badge badge-primary">@Model.ReviewsCount</span></li>
                    <li class="list-group-item">Parties: <span class="badge badge-primary">@Model.PartiesCount</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<form class="d-inline-block m-1" asp-area="Administration" asp-controller="Users" asp-action="Unban" method="post">
    <div class="form-group">
        <input type="submit" value="Unban" class="btn btn-primary btn-lg"/>
    </div>
</form>

<div class="d-inline-block m-1">
    <a asp-area="Administration" asp-controller="Users" asp-action="Banned" type="submit" class="btn btn-primary btn-lg">Cancel</a>
</div>