@using GamersHub.Common
@model GamersHub.Web.ViewModels.Pages.PrivacyPageViewModel
@{
    this.ViewData["Title"] = "Privacy Policy";
}

@if (this.TempData["InfoMessage"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessage"]
    </div>
}

@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName) || this.User.IsInRole(GlobalConstants.ModeratorRoleName))
{
    <div class="d-inline-block float-right">
        <a asp-controller="Home" asp-action="EditPrivacy" type="submit" class="btn btn-warning btn-lg"> Edit</a>
    </div>
}
<h2 class="text-white text-center">
    <b>@this.ViewData["Title"]</b>
</h2>
<div class="container text-white">
    @Html.Raw(Model.SanitizedContent)
</div>