@using GamersHub.Data.Models
@model GamersHub.Web.ViewModels.Parties.InputModels.PartyCreateInputModel
@{
    ViewData["Title"] = "Create Party";

    var enumList = Html.GetEnumSelectList<ActivityType>();
}

<div class="text-center text-white">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr/>
<div class="row text-white">
    <div class="col-md-10">
        <form asp-controller="Parties" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Game"></label>
                <input asp-for="Game" class="form-control"/>
                <span asp-validation-for="Game" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity"></label>
                <select asp-for="Activity" asp-items="@enumList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Size"></label>
                <h6>Party Size cannot be changed later so please choose carefully</h6>
                <input asp-for="Size" class="form-control"/>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-lg btn-primary"/>
            </div>
        </form>
    </div>
</div>